<UserControl x:Class="MultipleDatabaseManager.JsonSettingsSubform"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultipleDatabaseManager"
             xmlns:scintillaNet="clr-namespace:ScintillaNET;assembly=ScintillaNET"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <WindowsFormsHost Height="250" Margin="0,5">
            <scintillaNet:Scintilla x:Name="SourceJson"/>
        </WindowsFormsHost>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="85,280,0,0" VerticalAlignment="Top" Width="75" Click="save_Click"/>
    </Grid>
</UserControl>
